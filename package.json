{
  "name": "mentalease-backend",
  "version": "0.1.0",
  "description": "A comprehensive backend API for mental health and wellness applications",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:security": "npm audit && snyk test",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "seed": "npx sequelize-cli db:seed:all",
    "build": "babel src -d dist",
    "docker:build": "docker build -t mentalease-backend .",
    "docker:run": "docker run -p 3000:3000 mentalease-backend",
    "docs": "swagger-jsdoc -d swaggerDef.js src/routes/*.js -o docs/swagger.json"
  },
  "keywords": [
    "mental-health",
    "wellness",
    "backend",
    "api",
    "node",
    "express",
    "healthcare",
    "therapy",
    "mood-tracking",
    "mindfulness"
  ],
  "author": "jazil10",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jazil10/MentalEase-Backend.git"
  },
  "bugs": {
    "url": "https://github.com/jazil10/MentalEase-Backend/issues"
  },
  "homepage": "https://github.com/jazil10/MentalEase-Backend#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "pg": "^8.11.3",
    "sequelize": "^6.32.1",
    "redis": "^4.6.7",
    "crypto": "^1.0.1",
    "nodemailer": "^6.9.4",
    "multer": "^1.4.5-lts.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "@sentry/node": "^7.64.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.46.0",
    "prettier": "^3.0.1",
    "sequelize-cli": "^6.6.1",
    "@babel/cli": "^7.22.10",
    "@babel/core": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "snyk": "^1.1189.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/**",
      "!src/migrations/**",
      "!src/seeders/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}